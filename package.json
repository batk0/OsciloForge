{
  "name": "oscillo-forge",
  "version": "1.0.0",
  "productName": "OscilloForge",
  "description": "",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "test": "vitest",
    "lint": "eslint src/ spec/",
    "lint:fix": "eslint src/ spec/ --fix",
    "build": "electron-builder --publish never",
    "postinstall": "electron-builder install-app-deps",
    "release": "semantic-release"
  },
  "build": {
    "appId": "com.oscilloforge.app",
    "productName": "OscilloForge",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!spec/**",
      "!coverage/**",
      "!docs/**",
      "!.github/**",
      "!eslint.config.mjs",
      "!vitest.config.js"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities",
      "identity": null,
      "icon": "logo.png"
    },
    "win": {
      "target": [
        "portable"
      ],
      "icon": "logo.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Utility",
      "icon": "logo.png"
    },
    "publish": {
      "provider": "github"
    }
  },
  "keywords": [],
  "author": "Anton Kaiukov <batkowm@gmail.com>",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/commit-analyzer": "^11.0.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^9.0.0",
    "@semantic-release/release-notes-generator": "^12.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "conventional-changelog-conventionalcommits": "^7.0.0",
    "electron": "^40.4.0",
    "electron-builder": "^26.7.0",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "jsdom": "^28.0.0",
    "semantic-release": "^23.0.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "canvas": "^3.2.1"
  }
}
